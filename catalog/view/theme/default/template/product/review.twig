<div class="col-sm-12" style="margin-bottom: 25px; ">                
    <div class="" style="background-color: #64a9e0; color: #fff; box-shadow: #64a9e0 0px 0px 10px; padding-left: 15px; padding-right: 15px; border-radius: 5px 5px 0px 0px;"><span style="font-weight: bold;">{{ review.author }}</span><span style="float:right;">{{ review.date_added }}</span></div>
                    
    <div class="" style="background-color: #fff; box-shadow: #64a9e0 0px 0px 10px; padding-left: 15px; padding-right: 15px;     border-radius: 0px 0px 5px 5px;">
        <p style="padding-top:10px; min-height: 70px; text-overflow: ellipsis; text-align: left; color: #191925;"><img style="float: left;" src="{{review.image}}">{{ review.text }}</p>
        {% for i in 1..5 %}
            {% if review.rating < i %} <span class="fa fa-stack" style="color: #64a9e0;"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack" style="color: #64a9e0;"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
        {% endfor %}    
    </div>
</div>
{% endfor %}
<div class="row">
  <div class="col-sm-6 text-left">{{ pagination }}</div>
  <div class="col-sm-6 text-right">{{ results }}</div>
</div>
{% else %}
<p>{{ text_no_reviews }}</p>
{% endif %}
